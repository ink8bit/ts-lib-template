{
  "compilerOptions": {
    "target": "ES2018",
    "module": "commonjs",
    "allowJs": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "lib"
  },
  "include": ["src/**/*.js", "src/**/*.ts"],
  "exclude": ["src/**/*.test.js", "src/**/*.spec.js"]
}
