{
  "name": "lib",
  "version": "0.0.0",
  "description": "Library template with TypeScript",
  "private": true,
  "main": "index.js",
  "engines": {
    "node": "^12.0.0"
  },
  "author": "ink8bit",
  "license": "MIT",
  "scripts": {
    "validate": "npm run types:check && npm run format && npm run lint && npm t && npm run build",
    "build": "babel src --extensions .js,.ts --ignore \"src/**/*.spec.js\",\"src/**/*.test.js\" --out-dir lib",
    "types:check": "tsc",
    "lint": "eslint --ext .js,.ts .",
    "prettier": "prettier \"**/*.[j,t]s\"",
    "format": "npm run prettier -- --write",
    "format:check": "npm run prettier -- --list-different",
    "test": "jest --forceExit",
    "test:watch": "npm t -- --watch",
    "test:ci": "npm t -- --config jest.config.ci.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ink8bit/ts-lib-template.git"
  },
  "bugs": {
    "url": "https://github.com/ink8bit/ts-lib-template/issues"
  },
  "homepage": "https://github.com/ink8bit/ts-lib-template#readme",
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.8.4",
    "@babel/plugin-transform-modules-commonjs": "^7.8.3",
    "@babel/plugin-transform-runtime": "^7.8.3",
    "@babel/preset-env": "^7.8.4",
    "@babel/preset-typescript": "^7.8.3",
    "@babel/runtime": "^7.8.4",
    "@typescript-eslint/eslint-plugin": "^2.19.2",
    "@typescript-eslint/parser": "^2.19.2",
    "babel-eslint": "^10.0.3",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "jest": "^25.1.0",
    "prettier": "^1.19.1",
    "typescript": "^3.7.5"
  }
}
